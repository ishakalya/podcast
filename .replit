modules = ["python-3.11", "nodejs-20"]

[nix]
channel = "stable-24_05"
packages = ["cairo", "ffmpeg-full", "freetype", "ghostscript", "glibcLocales", "gobject-introspection", "gtk3", "pkg-config", "qhull", "tcl", "tk", "mongodb"]

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "app.py", "--server.port", "5000"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "MongoDB"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Podcast API"

[[workflows.workflow]]
name = "MongoDB"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "mongod --dbpath /tmp/mongodb --port 27017 --bind_ip 127.0.0.1"
waitForPort = 27017

[[workflows.workflow]]
name = "Podcast API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node app.js"
waitForPort = 5050

[[ports]]
localPort = 5050
externalPort = 80